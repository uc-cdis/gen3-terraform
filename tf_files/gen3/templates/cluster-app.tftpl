apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: cluster-level-resources
  namespace: argocd
spec:
  destination:
    namespace: argocd
    server: https://kubernetes.default.svc
  project: default
  sources:
  - helm:
      releaseName: cluster-level-resources
      valueFiles:
      - $values/${vpc_name}/cluster-level-resources/cluster-values.yaml
    path: helm/cluster-level-resources
    repoURL: '${helm_repo}'
  - ref: values
    repoURL: '${gitops_repo}'
    targetRevision: main
  syncPolicy:
    automated:
      selfHeal: true